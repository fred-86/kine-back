{% extends 'base.html.twig' %}

{% block title %}Availability index{% endblock %}

{% block body %}
    <h1>Availability index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reason</th>
                <th>StartTime</th>
                <th>EndTime</th>
                <th>Recurrence</th>
                <th>RecurrenceDays</th>
                <th>IsWorkingHours</th>
                <th>DaysOfWeeks</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>BackgroundColor</th>
                <th>TextColor</th>
                <th>BorderColor</th>
                <th>AllDay</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for availability in availabilities %}
            <tr>
                <td>{{ availability.id }}</td>
                <td>{{ availability.reason }}</td>
                <td>{{ availability.startTime ? availability.startTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ availability.endTime ? availability.endTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ availability.recurrence ? 'Yes' : 'No' }}</td>
                <td>{{ availability.recurrenceDays ? availability.recurrenceDays|join(', ') : '' }}</td>
                <td>{{ availability.isWorkingHours ? 'Yes' : 'No' }}</td>
                <td>{{ availability.daysOfWeeks ? availability.daysOfWeeks|join(', ') : '' }}</td>
                <td>{{ availability.createdAt ? availability.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ availability.updatedAt ? availability.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ availability.backgroundColor }}</td>
                <td>{{ availability.textColor }}</td>
                <td>{{ availability.borderColor }}</td>
                <td>{{ availability.allDay ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_back_availability_show', {'id': availability.id}) }}">show</a>
                    <a href="{{ path('app_back_availability_edit', {'id': availability.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_availability_new') }}">Create new</a>
{% endblock %}
